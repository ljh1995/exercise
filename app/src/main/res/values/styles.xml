<resources>

    <!-- Base application theme. -->
    <style name="SampleTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/color_blue</item>
        <item name="colorPrimaryDark">@color/color_blue</item>
        <item name="android:subtitleTextStyle">@style/ActionBarSubtitle</item>
    </style>

    <style name="ActionBarSubtitle" parent="@android:style/TextAppearance.Holo.Medium">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!--自定义，带删除按钮的文本框-->
    <style name="ClearEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <!--<item name="android:padding">5dp</item>-->
        <item name="android:background">@null</item>
        <item name="android:gravity">left</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:maxLength">50</item>
        <item name="android:minLines">1</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="tab_menu_text">
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textColor">@drawable/tab_menu_text</item>
        <item name="android:textSize">12dp</item>
        <item name="android:gravity">center</item>
    </style>

    <!--view样式 文本框分割线view-->
    <style name="zhengzhou_text_view_style_view1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">#EAEAEA</item>
    </style>

    <!--文本框样式LinearLayout-->
    <style name="zhengzhou_text_view_style_linearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@drawable/ic_linearlayout_x</item>
    </style>

    <!--文本框样式textview描述-->
    <style name="zhengzhou_text_view_style_textview1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#353535</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="TabLayoutTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
