<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/title_main"></include>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView

            android:id="@+id/ico_img"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="80dp"
            android:src="@drawable/uslogo"/>
        <TextView
            android:layout_below="@+id/ico_img"
            android:gravity="center"
            android:layout_marginTop="@dimen/dimens_10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="食汇居"
            android:textColor="@color/black"
            android:textSize="18dp"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_below="@+id/ico_img"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:padding="@dimen/dimens_10dp">
            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="       食汇居，是由宁夏大学信息工程学院学生开发的一款移动手机APP，可以让你轻松获得校园食堂一手资讯，相信会是你生活的得力助手。"
                android:textColor="@color/result_view"
                android:textSize="16dp"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="150dp"
            android:layout_below="@+id/ico_img"
            android:padding="@dimen/dimens_10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="联系方式:"
                android:textColor="@color/result_view"
                android:textSize="16dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:text="联系人"
                    android:textColor="@color/result_view"
                    android:textSize="16dp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="8"
                    android:layout_height="wrap_content"
                    android:text="信息工程学院小菜鸟"
                    android:textColor="@color/result_view"
                    android:textSize="16dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:text="电话"
                    android:textColor="@color/result_view"
                    android:textSize="16dp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="8"
                    android:layout_height="wrap_content"
                    android:text="13425275373"
                    android:textColor="@color/result_view"
                    android:textSize="16dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:text="欢迎大家使用，我们随时接受您宝贵的意见。"
                    android:textColor="@color/result_view"
                    android:textSize="16dp"/>

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>