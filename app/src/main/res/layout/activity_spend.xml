<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/title_main"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dimens_10dp"
            android:paddingRight="@dimen/dimens_10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="商&#12288;&#12288;品"
                android:gravity="center_vertical"
                android:layout_centerVertical= "true"
                android:textSize="16dp"/>
            <TextView
                android:id="@+id/name"
                android:layout_weight="5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text=""
                android:gravity="center_vertical"
                android:layout_centerVertical= "true"
                android:textSize="14dp"
                android:textColor="@color/gray"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:background="@color/colorDivision"></View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="@dimen/dimens_10dp"
            android:paddingRight="@dimen/dimens_10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="数&#12288;&#12288;量"
                android:gravity="center_vertical"
                android:layout_centerVertical= "true"
                android:textSize="16dp"/>

            <LinearLayout
                android:layout_weight="5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:padding="10dp"
                android:gravity="center_vertical"
                android:layout_centerVertical= "true"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/ivGoodsAdd"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    android:background="@mipmap/icon_goods_button_add"/>


                <TextView
                    android:id="@+id/tvGoodsSelectNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_centerVertical= "true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:textColor="@color/gray"
                    android:layout_toLeftOf="@+id/ivGoodsAdd"
                    android:text=""
                    android:textSize="16dp"
                    />
                <ImageView
                    android:id="@+id/ivGoodsMinus"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_toLeftOf="@id/tvGoodsSelectNum"
                    android:background="@mipmap/icon_goods_button_minus_gray"/>

            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:background="@color/colorDivision"></View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="@dimen/dimens_10dp"
            android:paddingRight="@dimen/dimens_10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="实付金额"
                android:gravity="center_vertical"
                android:layout_centerVertical= "true"
                android:textSize="16dp"/>
            <TextView
                android:id="@+id/price"
                android:layout_weight="5"
                android:layout_width="0dp"
                android:padding="10dp"
                android:layout_height="wrap_content"
                android:text=""
                android:gravity="center_vertical"
                android:layout_centerVertical= "true"
                android:textSize="16dp"
                android:textColor="@color/holo_orange_light"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:background="@color/colorDivision"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="@dimen/dimens_10dp"
            android:paddingRight="@dimen/dimens_10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="联系电话"
                android:gravity="center_vertical"
                android:layout_centerVertical= "true"
                android:textSize="16dp"/>
            <com.example.administrator.ljh_project.ui.ClearEditText
                android:id="@+id/number"
                android:layout_weight="4.5"
                android:layout_width="0dp"
                android:inputType="number"
                android:padding="10dp"
                android:layout_height="wrap_content"
                android:textColor="@color/gray"
                android:textSize="14dp"
                android:gravity="center_vertical"
                android:layout_centerVertical= "true"
                android:background="@drawable/edit_bg"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:background="@color/colorDivision"></View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="@dimen/dimens_10dp"
            android:paddingRight="@dimen/dimens_10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="备&#12288;&#12288;注"
                android:gravity="center_vertical"
                android:layout_centerVertical= "true"
                android:textSize="16dp"/>
            <com.example.administrator.ljh_project.ui.ClearEditText
                android:id="@+id/say"
                android:layout_weight="4.5"
                android:layout_width="0dp"
                android:inputType="text"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_centerVertical= "true"
                android:padding="10dp"
                android:textSize="14dp"
                android:textColor="@color/gray"
                android:background="@drawable/edit_bg"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:background="@color/colorDivision"></View>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@color/holo_orange_light">

        <TextView
            android:id="@+id/submit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="提交订单"
            android:textColor="@color/white"/>
    </LinearLayout>
</LinearLayout>