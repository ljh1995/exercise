<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="13dp"
        >

        <ImageView
            android:id="@+id/ivGoodsImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@mipmap/icon_logo_image_default"/>

        <LinearLayout
            android:id="@+id/goodsInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/ivGoodsImage"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/goodsCategoryName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:text="矿泉水"
                    android:textStyle="bold"
                    android:textColor="@color/shop_cart_bg"
                    android:textSize="15sp"/>

                <LinearLayout
                    android:id="@+id/delete_update"
                    android:visibility="gone"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/update"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="修改"
                        android:gravity="center"
                        android:textColor="@color/holo_orange_light"
                        android:textSize="15sp"/>

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="@color/black">

                    </View>

                    <TextView
                        android:id="@+id/delete"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="删除"
                        android:gravity="center"
                        android:textColor="#1E90FF"
                        android:textSize="15sp"/>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/tvGoodsDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:maxLines="2"
                android:text="来自长白山的深层岩水"
                android:textColor="@color/color_999"
                android:textSize="12sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/star"
                    ></ImageView>
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/star"
                    android:layout_marginLeft="@dimen/dimens_10dp"/>
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/star"
                    android:layout_marginLeft="@dimen/dimens_10dp"/>
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/star"
                    android:layout_marginLeft="@dimen/dimens_10dp"/>
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/star"
                    android:layout_marginLeft="@dimen/dimens_10dp"/>

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>




</RelativeLayout>